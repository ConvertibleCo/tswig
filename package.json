{
  "name": "@convertible/tswig",
  "version": "0.0.1",
  "description": "tswig is a utility to convert TypeScript configurations (tsconfig) to SWC configurations, making it easier to transition from TypeScript to SWC. It supports intelligent 1:1 conversion, SWC-specific options, and TypeScript project references.",
  "main": "lib/index.js",
  "scripts": {
    "clean": "rm -rf lib",
    "swc": "swc --out-dir lib src",
    "build": "npm run build && npm run generate:types",
    "prepublishOnly": "npm audit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "snyk": "snyk",
    "test": "pnpm run test:unit && pnpm run test:integration",
    "test:watch": "jest --watch",
    "test:coverage": "pnpm run test:unit --coverage",
    "test:unit": "jest --testMatch='**/__tests__/unit/**/*.unit.test.(ts|tsx)'",
    "test:integration": "jest --testMatch='**/__tests__/integration/**/*.integration.test.(ts|tsx)' --passWithNoTests",
    "test:e2e": "jest --testMatch='**/__tests__/e2e/**/*.e2e.test.(ts|tsx)'",
    "generate:types": "tsc --declaration",
    "generate:docs": "typedoc"
  },
  "keywords": [
    "swc",
    "typescript",
    "tsconfig",
    "conversion",
    "config-converter",
    "typescript-to-swc",
    "swc-config",
    "tsconfig-to-swc",
    "typescript-config",
    "swc-converter",
    "swc-configuration",
    "tsconfig-converter",
    "babel-alternative",
    "javascript-compiler",
    "typescript-compiler",
    "ts-to-swc",
    "ts2swc",
    "swc-transform"
  ],
  "author": "Convertible Co",
  "license": "MIT",
  "devDependencies": {
    "@swc/core": "^1.3.57",
    "@tsconfig/node18": "^2.0.1",
    "@tsconfig/recommended": "^1.0.2",
    "@tsconfig/strictest": "^2.0.1",
    "@types/glob": "^8.1.0",
    "@types/jest": "^29.5.1",
    "@types/node": "^20.1.1",
    "@typescript-eslint/eslint-plugin": "^5.59.6",
    "@typescript-eslint/parser": "^5.59.6",
    "eslint": "^8.40.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "glob": "^10.2.5",
    "jest": "^29.5.0",
    "prettier": "^2.8.8",
    "snyk": "^1.1159.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typedoc": "^0.24.7",
    "typescript": "^5.0.4"
  },
  "exports": {
    ".": {
      "import": "./lib/index.mjs",
      "require": "./lib/index.js",
      "types": "./lib/index.d.ts"
    }
  },
  "peerDependencies": {
    "typescript": "^3.0.1"
  }
}
